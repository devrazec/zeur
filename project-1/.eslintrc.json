{
  "extends": ["next", "next/core-web-vitals", "plugin:prettier/recommended"],
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "out/",
    "dist/",
    "build/",
    "public/",
    "coverage/",
    ".flowbite-react/"
  ],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "semi": true,
        "singleQuote": true,
        "printWidth": 80,
        "tabWidth": 2,
        "trailingComma": "es5",
        "arrowParens": "avoid"
      }
    ]
  }
}
